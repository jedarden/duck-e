# Hardened Nginx Configuration for DUCK-E
# Security Review: 2025-10-10
# Addresses: NET-001 through NET-008

user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

# Performance tuning
worker_rlimit_nofile 65535;

events {
    worker_connections 4096;
    use epoll;
    multi_accept on;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # Logging format with security headers
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for" '
                    'rt=$request_time uct="$upstream_connect_time" '
                    'uht="$upstream_header_time" urt="$upstream_response_time"';

    log_format security '$remote_addr - $remote_user [$time_local] '
                       '"$request" $status $body_bytes_sent '
                       '"$http_referer" "$http_user_agent" '
                       'blocked="$http_x_blocked_by"';

    access_log /var/log/nginx/access.log main;

    # Performance optimizations
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    keepalive_requests 100;
    types_hash_max_size 2048;
    client_body_timeout 12;
    client_header_timeout 12;
    send_timeout 10;

    # Buffer size limits (prevent buffer overflow attacks)
    client_body_buffer_size 1K;
    client_header_buffer_size 1k;
    client_max_body_size 1m;
    large_client_header_buffers 2 1k;

    # SECURITY: Hide Nginx version
    server_tokens off;
    more_clear_headers Server;

    # Compression (with BREACH mitigation)
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript
               application/json application/javascript application/xml+rss
               application/rss+xml font/truetype font/opentype
               application/vnd.ms-fontobject image/svg+xml;
    gzip_disable "msie6";

    # Rate limiting zones
    limit_req_zone $binary_remote_addr zone=api_limit:10m rate=100r/m;
    limit_req_zone $binary_remote_addr zone=ws_limit:10m rate=50r/m;
    limit_req_zone $binary_remote_addr zone=static_limit:10m rate=300r/m;
    limit_conn_zone $binary_remote_addr zone=conn_limit:10m;

    # Request rate limiting by IP
    limit_req_status 429;
    limit_conn_status 429;

    # Upstream backend with health checks
    upstream ducke_backend {
        server duck-e:8000 max_fails=3 fail_timeout=30s;
        keepalive 32;
        keepalive_requests 100;
        keepalive_timeout 60s;
    }

    # GeoIP blocking (optional - requires ngx_http_geoip2_module)
    # map $geoip2_country_code $allowed_country {
    #     default no;
    #     US yes;
    #     CA yes;
    #     GB yes;
    # }

    # Block malicious user agents
    map $http_user_agent $blocked_agent {
        default 0;
        ~*sqlmap 1;
        ~*nikto 1;
        ~*nmap 1;
        ~*masscan 1;
        ~*nessus 1;
        ~*metasploit 1;
        ~*(bot|crawler|spider) 1;
    }

    # Redirect HTTP to HTTPS
    server {
        listen 80;
        listen [::]:80;
        server_name ducke.app www.ducke.app;

        # ACME challenge for Let's Encrypt
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
            allow all;
        }

        # Redirect everything else to HTTPS
        location / {
            return 301 https://$host$request_uri;
        }
    }

    # HTTPS server - Main configuration
    server {
        listen 443 ssl http2;
        listen [::]:443 ssl http2;
        server_name ducke.app www.ducke.app;

        # SECURITY FIX NET-001, NET-002: TLS Configuration
        ssl_certificate /etc/nginx/ssl/fullchain.pem;
        ssl_certificate_key /etc/nginx/ssl/privkey.pem;
        ssl_trusted_certificate /etc/nginx/ssl/chain.pem;

        # SECURITY: TLS 1.3 only (most secure)
        ssl_protocols TLSv1.3;
        ssl_prefer_server_ciphers off;
        ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256';

        # OCSP Stapling
        ssl_stapling on;
        ssl_stapling_verify on;
        resolver 8.8.8.8 8.8.4.4 1.1.1.1 1.0.0.1 valid=300s;
        resolver_timeout 5s;

        # Diffie-Hellman parameter for DHE ciphersuites
        ssl_dhparam /etc/nginx/dhparam.pem;

        # Session configuration
        ssl_session_timeout 1d;
        ssl_session_cache shared:SSL:50m;
        ssl_session_tickets off;

        # SECURITY FIX NET-006: HSTS Header
        add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;

        # SECURITY FIX NET-007: Content Security Policy
        add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' wss://ducke.app https://ducke.app; font-src 'self'; object-src 'none'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';" always;

        # Additional security headers
        add_header X-Frame-Options "DENY" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;
        add_header Referrer-Policy "strict-origin-when-cross-origin" always;
        add_header Permissions-Policy "geolocation=(), microphone=(self), camera=(self), payment=(), usb=(), magnetometer=(), gyroscope=()" always;

        # Remove sensitive headers from responses
        more_clear_headers 'X-Powered-By';
        more_clear_headers 'X-AspNet-Version';
        more_clear_headers 'X-Runtime';

        # Rate limiting
        limit_req zone=api_limit burst=20 nodelay;
        limit_conn conn_limit 10;

        # Block malicious agents
        if ($blocked_agent) {
            return 403;
        }

        # Root location
        location / {
            proxy_pass http://ducke_backend;
            proxy_http_version 1.1;

            # Proxy headers
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port $server_port;

            # Security headers for proxied requests
            proxy_set_header X-Request-ID $request_id;

            # Timeouts
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;

            # Buffer settings
            proxy_buffering on;
            proxy_buffer_size 4k;
            proxy_buffers 8 4k;
            proxy_busy_buffers_size 8k;
        }

        # Status endpoint (no rate limiting for health checks)
        location /status {
            proxy_pass http://ducke_backend;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # Allow only internal health checks
            allow 172.28.0.0/16;  # Docker network
            allow 127.0.0.1;
            deny all;
        }

        # SECURITY FIX NET-005: WebSocket endpoint with WSS
        location /session {
            # WebSocket rate limiting
            limit_req zone=ws_limit burst=10 nodelay;

            proxy_pass http://ducke_backend;
            proxy_http_version 1.1;

            # WebSocket headers
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # SECURITY: Pass through user identification
            proxy_set_header X-Forwarded-User $remote_user;

            # Timeouts for long-lived WebSocket connections
            proxy_connect_timeout 7d;
            proxy_send_timeout 7d;
            proxy_read_timeout 7d;

            # Disable buffering for WebSocket
            proxy_buffering off;
        }

        # Static files with caching and rate limiting
        location /static/ {
            limit_req zone=static_limit burst=50 nodelay;

            proxy_pass http://ducke_backend;
            proxy_http_version 1.1;
            proxy_set_header Host $host;

            # Aggressive caching for static assets
            expires 1y;
            add_header Cache-Control "public, immutable";

            # Security headers for static content
            add_header X-Content-Type-Options "nosniff" always;
        }

        # Deny access to hidden files
        location ~ /\. {
            deny all;
            access_log off;
            log_not_found off;
        }

        # Deny access to backup files
        location ~ ~$ {
            deny all;
            access_log off;
            log_not_found off;
        }

        # Custom error pages
        error_page 404 /404.html;
        error_page 500 502 503 504 /50x.html;

        # Error page location
        location = /50x.html {
            root /usr/share/nginx/html;
            internal;
        }

        # Security logging for suspicious requests
        location ~* (eval|base64_decode|gzinflate|preg_replace|exec|shell_exec|system) {
            access_log /var/log/nginx/security.log security;
            deny all;
        }
    }

    # Server block for www to non-www redirect
    server {
        listen 443 ssl http2;
        listen [::]:443 ssl http2;
        server_name www.ducke.app;

        ssl_certificate /etc/nginx/ssl/fullchain.pem;
        ssl_certificate_key /etc/nginx/ssl/privkey.pem;

        return 301 https://ducke.app$request_uri;
    }
}
